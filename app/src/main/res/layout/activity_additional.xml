<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".AdditionalActivity">


        <TextView
            android:id="@+id/reviewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Review Order"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/additionalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reviewText"
            android:layout_marginTop="30sp"
            android:text="Additional Options"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/addOptional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/additionalText"
            android:layout_alignBottom="@+id/additionalText"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/additionalText"
            android:layout_toRightOf="@+id/additionalText"
            android:text="(optional)"
            android:textStyle="italic" />

        <CheckBox
            android:id="@+id/moverText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/additionalText"
            android:layout_marginTop="10sp"
            android:checked="false"
            android:text="Moving Help"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/moverCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/moverText"
            android:layout_alignParentRight="true"
            android:layout_below="@id/additionalText"
            android:text="$50"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/assemblyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/moverText"
            android:layout_marginTop="5sp"
            android:checked="false"
            android:text="Furniture Assembly"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/assemblyCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/assemblyText"
            android:layout_alignParentRight="true"
            android:text="$50"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/finalCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/assemblyText"
            android:layout_marginTop="30sp"
            android:text="Total Cost"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/finalTotalCostValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/assemblyText"
            android:layout_marginTop="30sp"
            android:text="Value"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20sp" />

        <Button
            android:id="@+id/finalCheckoutButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/finalCost"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30sp"
            android:text="Checkout" />


    </RelativeLayout>
</ScrollView>